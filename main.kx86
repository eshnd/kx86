num: x, 0;
num: y, 0;

pack: draw,
    pixel: [x], [y], #FF0000 &
    op: [x] ++ 1, [x] &
    op: [y] ++ 1, [y] &
;

pack: func,
    if: key=a,
        then=draw,
        else=NONE &
;

forever: func;

